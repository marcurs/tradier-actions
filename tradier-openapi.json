{
  "openapi": "3.1.0",
  "info": {
    "title": "Tradier Market Data",
    "version": "1.0.0",
    "description": "Accede a cotizaciones y cadenas de opciones desde Tradier API"
  },
  "servers": [
    {
      "url": "https://api.tradier.com/v1"
    }
  ],
  "paths": {
    "/markets/quotes": {
      "get": {
        "summary": "Obtener cotización actual",
        "operationId": "getQuote",
        "parameters": [
          {
            "name": "symbols",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Símbolo o símbolos separados por coma (ej: AAPL,MSFT)"
          }
        ],
        "responses": {
          "200": {
            "description": "Cotización obtenida",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/QuoteResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/markets/options/chains": {
      "get": {
        "summary": "Obtener cadena de opciones",
        "operationId": "getOptionChain",
        "parameters": [
          {
            "name": "symbol",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "expiration",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "format": "date" }
          },
          {
            "name": "greeks",
            "in": "query",
            "required": false,
            "schema": { "type": "boolean" },
            "description": "Incluir griegas en respuesta"
          }
        ],
        "responses": {
          "200": {
            "description": "Cadena de opciones",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OptionsChainResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "QuoteResponse": {
        "type": "object",
        "properties": {
          "quotes": {
            "type": "object",
            "properties": {
              "quote": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "symbol": { "type": "string" },
                    "last": { "type": "number" },
                    "bid": { "type": "number" },
                    "ask": { "type": "number" },
                    "change": { "type": "number" },
                    "volume": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      },
      "OptionsChainResponse": {
        "type": "object",
        "properties": {
          "options": {
            "type": "object",
            "properties": {
              "option": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "symbol": { "type": "string" },
                    "strike": { "type": "number" },
                    "expiration_date": { "type": "string" },
                    "option_type": { "type": "string" },
                    "bid": { "type": "number" },
                    "ask": { "type": "number" },
                    "last": { "type": "number" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

